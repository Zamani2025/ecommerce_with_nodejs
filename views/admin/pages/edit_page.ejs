<%- include ('../../layouts/adminHeader') -%> 
<h2>Edit Page</h2>
<a href="/admin/pages" class="btn btn-primary mb-4">Back to all pages</a><br><br>
<form action="/admin/pages/edit-page/<%= pages.slug %> " method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= pages.title %> " class="form-control" placeholder="Title" id="">
    </div>
    <div class="form-group">
        <label for="title">Slug</label>
        <input type="text" name="slug" value="<%= pages.slug %> " class="form-control" placeholder="Slug" id="">
    </div>
    <div class="form-group">
        <label for="title">Content</label>
        <textarea name="content" id="ta" class="form-control" placeholder="Description" cols="30" rows="10"><%= pages.content %>  </textarea>
    </div>
    <button type="submit" class="btn btn-primary">Edit Page</button>
</form>

<br><br><br><br>

<%- include ('../../layouts/adminFooter') -%> 