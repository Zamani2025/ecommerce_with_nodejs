<%- include ('../../layouts/adminHeader') -%> 
<h1>All Catgories</h1>
<a href="/admin/categories/add-category" class="btn btn-primary">Back to add category</a><br><br>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% categories.forEach(category => { %>        
            <tr>
                <td><%= category.title %> </td>
                <td><a href="/admin/categories/edit-category/<%= category.slug %> " class="text-decoration-none"><i class="fa fa-edit"></i></a></td>
                <td>
                    <form action="/admin/categories/delete-category/<%= category.slug %> " method="post">
                        <button type="submit"><i class="fa fa-trash text-danger"></i></button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<br><br><br><br>

<%- include ('../../layouts/adminFooter') -%> 